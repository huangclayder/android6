     status_t err = mSource->stop();
 
@@ -88,13 +100,6 @@ status_t RepeaterSource::stop() {
         mReflector.clear();
     }
 
-    if (mBuffer != NULL) {
-        ALOGV("releasing mbuf %p", mBuffer);
-        mBuffer->release();
-        mBuffer = NULL;
-    }
-
-
     ALOGV("stopped");
 
     mStarted = false;
@@ -197,7 +202,14 @@ void RepeaterSource::onMessageReceived(const sp<AMessage> &msg) {
             mCondition.broadcast();
 
             if (err == OK) {
-                postRead();
+                if (mStopping) {
+                    if (mBuffer != NULL) {
+                        mBuffer->release();
