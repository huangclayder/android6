+            write_event(mUibcTouchFd, EV_SYN, SYN_MT_REPORT, 0);
+            write_event(mUibcTouchFd, EV_SYN, SYN_REPORT, 0);
             break;
     }
     return 0;
@@ -355,18 +355,18 @@ status_t WifiDisplaySource::sendkeyevent(int16_t action, int16_t keycode)
     {
         case KEY_ACTION_DOWN:
             ALOGI("key down");
