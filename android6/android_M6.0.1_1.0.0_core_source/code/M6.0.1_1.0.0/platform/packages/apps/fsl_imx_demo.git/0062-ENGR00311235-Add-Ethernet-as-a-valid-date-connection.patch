 1 file changed, 4 insertions(+), 3 deletions(-)

diff --git a/FSLOta/src/com/fsl/android/ota/OTAServerManager.java b/FSLOta/src/com/fsl/android/ota/OTAServerManager.java
index 4c0b77f..09dcff3 100644
