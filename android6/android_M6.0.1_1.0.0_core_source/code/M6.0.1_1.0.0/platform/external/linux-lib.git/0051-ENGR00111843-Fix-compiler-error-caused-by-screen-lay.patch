 AR=$(CROSS_COMPILE)ar
+INC = $(INCLUDE) -I../ipu
 
 OBJS = ScreenLayer.o
 
@@ -17,7 +18,7 @@ $(LIBNAME).so: $(OBJS)
 	$(CC) -shared -nostartfiles -Wl,-soname,$@ -o $@ $^ -L../ipu -lipu
 
