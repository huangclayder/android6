+WIFI_DRIVER_MODULE_NAME          	 := "ath6kl_sdio"
+WIFI_DRIVER_MODULE_ARG           	 := "suspend_mode=3 wow_mode=2 ar6k_clock=26000000 ath6kl_p2p=1"
