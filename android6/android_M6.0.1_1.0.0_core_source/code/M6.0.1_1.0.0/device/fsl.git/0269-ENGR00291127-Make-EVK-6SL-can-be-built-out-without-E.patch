diff --git a/evk_6sl/BoardConfig.mk b/evk_6sl/BoardConfig.mk
index ebf4e7b..2716c22 100644
--- a/evk_6sl/BoardConfig.mk
+++ b/evk_6sl/BoardConfig.mk
@@ -5,7 +5,7 @@
