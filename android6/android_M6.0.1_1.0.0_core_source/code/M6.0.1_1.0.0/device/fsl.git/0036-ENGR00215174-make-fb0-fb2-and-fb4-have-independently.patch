-clordepth=32
diff --git a/common/display/display_mode.conf b/common/display/display_mode.conf
deleted file mode 100644
index a2bf5f3..0000000
--- a/common/display/display_mode.conf
+++ /dev/null
@@ -1,5 +0,0 @@
