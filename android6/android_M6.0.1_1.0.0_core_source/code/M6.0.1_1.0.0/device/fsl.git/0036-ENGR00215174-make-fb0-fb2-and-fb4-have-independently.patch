 # Debug utils
 PRODUCT_PACKAGES += \
@@ -254,8 +256,9 @@ PRODUCT_COPY_FILES +=	\
 	device/fsl/imx6/etc/ueventd.freescale.rc:root/ueventd.freescale.rc \
