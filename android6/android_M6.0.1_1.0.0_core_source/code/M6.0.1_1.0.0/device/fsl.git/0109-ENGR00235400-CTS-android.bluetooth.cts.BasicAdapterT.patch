+++ b/imx6/sabresd/SabreSDProductCommon.mk
@@ -13,14 +13,16 @@ PRODUCT_CHARACTERISTICS := tablet
 PRODUCT_AAPT_CONFIG += xlarge large tvdpi hdpi
 
 PRODUCT_COPY_FILES += \
