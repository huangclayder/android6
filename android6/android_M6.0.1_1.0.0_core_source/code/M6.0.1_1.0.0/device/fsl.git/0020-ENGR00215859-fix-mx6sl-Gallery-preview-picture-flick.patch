 imx6/soc/imx6sl.mk          | 3 ++-
 sabreauto_6q/BoardConfig.mk | 3 ++-
 6 files changed, 10 insertions(+), 4 deletions(-)

diff --git a/imx53_smd/BoardConfig.mk b/imx53_smd/BoardConfig.mk
